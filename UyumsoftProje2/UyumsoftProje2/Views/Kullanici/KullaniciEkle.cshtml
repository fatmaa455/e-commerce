

@using UyumsoftProje2.Models;
@model UYE

@{
    ViewBag.Title = "Kullanıcı Ekle";
}

<h2>Kullanıcı Ekleme Sayfası</h2>

<form action="/Kullanici/KullaniciEkle" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" value="@Model.uyeId" id="uyeId" name="uyeId">
    </div>

    <div class="form-group">
        <label for="ad">Kullanıcı Adı: </label>
        <input type="text" class="form-control" value="@Model.ad" id="ad" name="ad">
    </div>

    <div class="form-group">
        <label for="soyad">Kullanıcı Soyadı: </label>
        <input type="text" class="form-control" value="@Model.soyad" id="soyad" name="soyad">
    </div>

    <div class="form-group">
        <label for="kullaniciAdi">Kullanıcıadı: </label>
        <input type="text" class="form-control" value="@Model.kullaniciAdi" id="kullaniciAdi" name="kullaniciAdi">
    </div>

    <div class="form-group">
        <label for="mail">Mail: </label>
        <input type="text" class="form-control" value="@Model.mail" id="mail" name="mail">
    </div>

    <div class="form-group">
        <label for="sifre">Şifre: </label>
        <input type="text" class="form-control" value="@Model.sifre" id="sifre" name="sifre">
    </div>

    <div class="form-group">
        <label for="kullaniciRolü">Kullanıcı Rolü: </label>
        <input type="text" class="form-control" value="@Model.kullaniciRolü" id="kullaniciRolü" name="kullaniciRolü">
    </div>

    <div class="form-group form-check">
    </div>
    <button type="submit" class="btn btn-primary">Kullanıcı Ekle</button>

</form>

